{
  "manifest_version": 3,
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "scripting",
    "activeTab",
    "webRequest"
  ],
  "host_permissions": [
    "*://*.ecole-directe.plus/*",
    "*://api.ecoledirecte.com/mot-de-passe-oublie.awp"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["*://api.ecoledirecte.com/mot-de-passe-oublie.awp"],
      "css": ["reset_password.css"],
      "js": ["reset_password.js"]
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "change_origin",
        "enabled": true,
        "path": "rulesets/change_origin.json"
      }
    ]
  },
  "action": {
    "default_title": "Ecole Directe Plus â€¢ Unblock",
    "default_popup": "popup/popup.html"
  }
}
